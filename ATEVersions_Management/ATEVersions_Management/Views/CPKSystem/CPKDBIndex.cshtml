    <div class="row ">
        <div class="col-sm-2 ">
            <div class="fii-frame-rectangle d-flex justify-content-center p-2">
                <button type="button" id="btnCPKModelOnline" class="btn btn- fii-btn fii-btn-success w-50">
                    <span>Online</span>
                </button>
                <button type="button" id="btnCPKModelOffline" class="btn btn- fii-btn fii-btn-secondary w-50">
                    <span>Offline</span>
                </button>
            </div>
            <div class="fii-frame-card d-flex justify-content-center w-100 p-2">
                <div id="divTabCPKModel" class="m-auto ">

                </div>
                <div id="divTabCPKOfflineModel" class="fii-form d-none w-100 ">
                    <div class="input-group ">
                        <div class="input-group-prepend ">
                            <span class="input-group-text fw-bold">MODEL</span>
                        </div>
                        <select id="cboCPKModel" class="btn fii-form-select-default ">
                            <option value="0">--- All ---</option>
                        </select>
                    </div>
                    <div class="tab-cpkmodel-offline">

                    </div>
                </div>
            </div>

        </div>
        <div class="col-sm-10 fii-frame-subcontent p-1">
            <div id="divFiiInputField" class="fii-form d-flex justify-content-center ">
                <div class="input-group justify-content-center">
                    <!-- datepicker control -->
                    <div class="input-group-prepend ">
                        <span class="input-group-text  text-"><i class="fas fa-calendar"></i></span>
                    </div>
                    <input type="text" id="timeSpan" class="form-control text-center fw-bold">
                    <!-- textbox display model pcs -->
                    <div class="input-group-prepend">
                        <span class="input-group-text fw-bold text-">QTY</span>
                    </div>
                    <input type="text" id="txtCPKNum" class="form-control fw-bold w-5 text-center text-" value="" style="max-width:10%;" disabled>
                    <!-- combobox select model MO -->
                    <div class="input-group-prepend">
                        <span class="input-group-text fw-bold text-">MO</span>
                    </div>
                    <select id="cboCPKMO" class="btn fii-form-select-default ">
                        <option value="0">--- All ---</option>
                    </select>
                    <!-- combobox select model ATE_PC -->
                    <div class="input-group-prepend">
                        <span class="input-group-text fw-bold text-">PC</span>
                    </div>
                    <select id="cboCPKPC" class="btn fii-form-select-default ">
                        <option value="0">--- All ---</option>
                    </select>
                </div>                
            </div>
            <div id="divTableModelStationItem" class="table-responsive d-flex flex-column justify-content-center align-items-center  mt-1">
                <div class="fii-nodata">
                    <i class="fa fa-meh"></i>
                    <span>NO DATA TO DISPLAY!</span>
                </div>
            </div>
            <div id="divCPKChartSection" class="d-flex justify-content-center">

            </div>
        </div>

    </div>
