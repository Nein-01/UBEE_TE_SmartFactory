    <input type="hidden" id="chartSectionUrl" value="@Url.Action("CPKChartSection")" />
    <input type="hidden" id="URL_GET_CPKOnOffModelList" value="@Url.Action("GET_CPKOnOffModelList")" />
    <input type="hidden" id="URL_GET_ListCPKModelStation" value="@Url.Action("GET_ListCPKModelStation")" />
    <input type="hidden" id="URL_GET_CPKModelList" value="@Url.Action("GET_CPKModelList")" />
    <input type="hidden" id="URL_GET_CPKStationList" value="@Url.Action("GET_CPKStationList")" />
    <input type="hidden" id="URL_GET_PartialTableCPKModelStationItem" value="@Url.Action("PartialTableCPKModelStationItem")" />
    <input type="hidden" id="URL_GET_ListMoByModel" value="@Url.Action("ListMoByModel")" />
    <input type="hidden" id="URL_GET_PCList" value="@Url.Action("GET_PCList")" />
