    </div>
    <div>
        <input type="hidden" id="URL_GET_ListAllUser" value="@Url.Action("GET_ListAllUser","MessageSystem")" />
        <input type="hidden" id="URL_GET_ListUserExceptLoggedUser" value="@Url.Action("GET_ListUserExceptLoggedUser","MessageSystem")" />
        <input type="hidden" id="URL_GET_MessageRecordBetween2Users" value="@Url.Action("GET_MessageRecordBetween2Users","MessageSystem")" />
        <input type="hidden" id="URL_GET_ListGroupContainLoggedUser" value="@Url.Action("GET_ListGroupContainLoggedUser","MessageSystem")" />
        <input type="hidden" id="URL_GET_MessageRecordOfUsersInGroup" value="@Url.Action("GET_MessageRecordOfUsersInGroup","MessageSystem")" />
        <input type="hidden" id="URL_POST_SendMessageBetween2User" value="@Url.Action("POST_SendMessageBetween2User","MessageSystem")" />
    </div>
    <script src="~/Assets/JS/MyJS/MessageSystem/MessageSystemCommonFuncs.js"></script>
