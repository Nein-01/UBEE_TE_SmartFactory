<!-- Modal Testplan List -->
<div class="modal fade BasicModal-lg" id="testPlanModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalLblTestPlan" class="fw-bold text-blue">
                    ...
                </h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body ">
                <div id="divTableTestPlan" class="table-responsive table-scrollable-lg">

                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal PDF File View -->
<div id="TestPlanPreviewModal" class="modal fade BasicModal" tabindex="-1" role="dialog" aria-labelledby="TestPlanPreviewModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-black">
            <div class="modal-header ">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div align="center" id="TestPlanPreviewModalBody">
                    <iframe src="" id="FilePreviewSection" style="width:90%; height:1000px"></iframe>

                </div>
            </div>
        </div>

    </div>
</div>

<div class="">
    <input type="hidden" id="URL_GET_PartialTestPlanTable" value="@Url.Action("_PartialTestPlanTable")" />
