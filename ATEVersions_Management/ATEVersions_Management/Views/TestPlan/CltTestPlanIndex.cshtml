    <input type="hidden" id="URL_GET_ListTestPlanPreview" value="@Url.Action("GET_ListTestPlanPreview")" />
    <input type="hidden" id="URL_GET_ListTestPlanPreviewByProjectType" value="@Url.Action("GET_ListTestPlanPreviewByProjectType")" />

</div>
